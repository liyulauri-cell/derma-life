    <script>
        // Language toggle functionality
        function showLanguage(lang) {
            // Update button states
            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            if (lang === 'en') {
                document.querySelectorAll('.lang-btn')[0].classList.add('active');
                // Show English content
                document.getElementById('english-hero').style.display = 'block';
                document.getElementById('amharic-hero').style.display = 'none';
            } else {
                document.querySelectorAll('.lang-btn')[1].classList.add('active');
                // Show Amharic content
                document.getElementById('english-hero').style.display = 'none';
                document.getElementById('amharic-hero').style.display = 'block';
            }
        }
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if(targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if(targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
</body>
